     A            BXNXT#         8S 0       TEXT('NEXT BAR CODE NUMBER')
     A                                      COLHDG('Next Bar' 'Code #')
     A                                      EDTCDE(4)
     A            BXDTLA         6S 0       TEXT('DATE')

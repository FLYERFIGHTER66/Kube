     A            BXTIME         6S 0       TEXT('TIME')
     A                                      COLHDG('Last Time')
     A                                      EDTWRD('  :  :  ')
     A            BXUSER        10A         TEXT('USER')
     A                                      COLHDG('Last User')
     A*
     A          K BXCOMP

     A            ZZPY           1A         TEXT('PAYROLL')
     A                                      COLHDG('P/Y')
     A            ZZBOM          1A         TEXT('BILL OF MATL')
     A                                      COLHDG('BOM')
     A            ZZSI           1A         TEXT('SERIALIZED INV')
     A                                      COLHDG('S/I')
     A            ZZSEED         1A         TEXT('SEED')
     A                                      COLHDG('Seed')
     A            ZZBARC         1A         TEXT('BAR CODE')

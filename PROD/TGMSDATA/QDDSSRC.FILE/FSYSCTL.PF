     A            ZZLIC         30A         TEXT('LICENSED TO')
     A                                      COLHDG('Licensed  To')
     A            ZZLIB         10A         TEXT('CUST. MOD. LIB.')
     A                                      COLHDG('Cust. Mods' 'Library')
